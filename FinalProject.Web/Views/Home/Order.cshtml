@{
    ViewData["Title"] = "Order";
}

<!-- Order page content goes here -->
<h1>Order Page</h1>
<!-- Add your order page content here -->
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <main class ="container text-center">
    <h1>Order form</h1>
    <form>
        <div class="p-3 text-primary bg-info border border-info rounded-3">

        <div class="row align-items-center">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="exampleInputEmail1"        
                 placeholder="name@example.com">
                <label for="exampleInputEmail1">Email address</label>
              </div>
              <button type="button" class="btn btn-primary btn-sm" id="emailSubmitBtn"  onclick="validateEmail()" disabled>Submit</button>

            </div>
         
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="tel" class="form-control" id="tbPhone" placeholder="###-###-####">
                <label for="tbPhone">Phone Number</label>
            </div>
            <button type="button" class="btn btn-primary btn-sm" 
            onclick="validatePhoneNumber()">Submit</button>
        </div>
       
  
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control"  id="name" name="name" placeholder="abcde" autocomplete="given-name">
                <label for="name">First Name</label>
              </div>
            <button type="button" class="btn btn-primary btn-sm" onclick="validateName()">Submit</button>
        </div>
    
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="favNum" name="favNum" placeholder="###">
                <label for="favNum">Favorite Number</label>
          </div>
          <button type="button" class="btn btn-primary btn-sm" onclick="validateFavNum()">Submit</button>

        </div>
  
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="date" class="form-control" id="birth" placeholder="mm/dd/yyyy">
                <label for="birth">Birthdate</label>
              </div>
            <button type="button" class="btn btn-primary btn-sm" 
             onclick="validateBirth()">Submit</button>
        </div>
        </div>

      
      </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript" src="thefile.js"></script>

 </body>
